<!doctype html>
<html lang="fr">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <header>
            <div class="container-fluid">
                
                <%- include('../nav', {active: "offers"}); %>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row vw-100">
                <div class="col-2 py-2 bg-light bg-gradient">
                    <aside>
                        <!-- <div class="hstack"> -->
                            <%- include('../../tri', {options: {
                                'nom': 'Nom',
                                'date_creation': "Date de création"
                            }, optionsearch: {
                            'date_creation': "Date de création",
                            'organisation': "Nom de l'entreprise",
                          } }); %>
                        <!-- </div> -->
                    </aside>
                </div>
                <div class="col-10">
                    <% offers.forEach((offer) => { %>
                    <tr>
                        <td><%= offer.numero %></td>
                        <td><%= offer.date_validite %></td>
                        <a href="detail_offer/<%= offer.numero %>" role="button" class="btn btn-dark m-2">Voir les détails</a>
                    </tr>
                    <% }) %>
                </div>
            </div>
        </div>
        <footer class="d-flex justify-content-around text-center text-lg-start bg-light text-muted">
            <%- include('../footer'); %>
            <%- include('../../page_counter', {pageNumber: pageNumber, maxPages: maxPages, params: params}); %>
            <div></div>
        </footer>
    </body>
</html>